{% extends 'layout/layoutFront.twig' %}
{% block title %}
    <div class="row">
        <div class="col text-center">
            <h3>Tous les BlogPosts</h3>
        </div>
    </div>
{% endblock %}

{% block content %}

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                {% for blogPost in blogPosts %}
                    <div class="post-preview">
                        <a href="post.html">
                            <h2 class="post-title">
                                {{ blogPost.title }}
                            </h2>
                            <h3 class="post-subtitle">
                                {{ blogPost.chapo }}
                            </h3>
                        </a>
                        <p class="post-meta">Rédigé par
                            <a href="#">{{blogPost.firstName  }} {{blogPost.lastName  }}</a>
                            le {{ blogPost.dateCreate|date("m/d/Y") }}</p>
                    </div>
                    <hr>
                {% endfor %}
                <!-- Pager -->
                <div class="clearfix">
                    <a class="btn btn-primary float-right" href="#">BlogPosts plus anciens&rarr;</a>
                </div>
            </div>
        </div>
    </div>

    <hr>
{% endblock %}