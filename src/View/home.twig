{% extends 'layout/layoutFront.twig' %}
{% block header %}
    <header class="masthead" style="background-image: url('img/home-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <div class="roundedImage text-center">
                            <img style="width: 150px" src="img/moi.jpg" alt="1"/>
                        </div>
                        <h1>Alix Romain </h1>
                        <span class="subheading"> Parcequ'on est pas là pour être ici!</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}
{% block content %}
    <p class="text-center">
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            Me Contacter
        </button>
    </p>
    <div class="collapse container" id="collapseExample">
        <form class="col" action="index.php?page=home&method=contact" method="post">
            <div class="row mb-3">
                <div class="col controls">
                    <input type="text" name="firstName" class="form-control" placeholder="Votre Nom" id="firstName" required data-validation-required-message="Veuillez entrer votre nom.">
                    <p class="help-block text-danger"></p>
                </div>
                <div class="col">
                    <input type="text" name="lastName" class="form-control" placeholder="Votre Prénom" id="lastName" required data-validation-required-message="Veuillez entrer votre prénom.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="form-group">
                <textarea class="form-control" id="comment" name="comment" placeholder="Taper votre commentaire..." rows="3" required data-validation-required-message="Veuillez entrer votre commentaire."></textarea>
                <p class="help-block text-danger"></p>
            </div>
            <p class="text-right">
                <button type="submit" class="btn btn-primary ">Envoyer</button>
            </p>
        </form>
    </div>
    <hr>
{% endblock %}